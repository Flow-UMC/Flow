<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.setting.BottomSheet"
    android:orientation="vertical"
    android:background="#3D3D3D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:background="@drawable/bottom_dialog">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="언제 시작할까요?"
            android:textSize="23dp"
            android:textColor="@color/black"
            android:fontFamily="@font/spoqahansansneo_bold"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/ic_close"
            android:background="@null"
            />


    </LinearLayout>


    <NumberPicker
        android:id="@+id/startday_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:theme="@style/BottomSheetPickerStyle"
        android:layout_marginVertical="15dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/choose_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="선택하기"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:fontFamily="@font/suit_bold"
        android:background="@drawable/choose_btn"/>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
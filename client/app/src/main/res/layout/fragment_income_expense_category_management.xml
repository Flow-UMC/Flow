<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IncomeExpenseCategoryManagementFragment">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="start">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:src="@drawable/ic_back"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/categoryBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/scrollView">

        <TextView
            android:id="@+id/categoryTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:text="카테고리"
            android:textColor="#0A0707"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/categoryBar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scrollContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/expenseBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/expenseCategory">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/expense_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:fontFamily="@font/spoqahansansneo_bold"
                    android:text="지출"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/delete_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@color/white"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:text="삭제하기"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/modify_txt"
                    app:layout_constraintEnd_toStartOf="@id/modify_txt"
                    app:layout_constraintTop_toTopOf="@id/modify_txt" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/modify_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:text="수정하기"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/delete_txt" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/expenseCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/expenseBar">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cafe_snack_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_cafe"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="카페∙간식"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/financial_insurance_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_finance"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="금융∙보험"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/medical_snack_btn"
                    app:layout_constraintTop_toTopOf="@id/medical_snack_btn" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/medical_snack_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_medical"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="의료∙건강"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/cafe_snack_btn"
                    app:layout_constraintTop_toTopOf="@id/cafe_snack_btn" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/onlineShopping_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_cafe"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="온라인 쇼핑"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/department_mall_btn"
                    app:layout_constraintTop_toBottomOf="@id/medical_snack_btn" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/food_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_food"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="식비"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/onlineShopping_btn"
                    app:layout_constraintTop_toBottomOf="@id/financial_insurance_btn" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/culture_art_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_entertainment"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="문화∙예술"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/department_mall_btn"
                    app:layout_constraintTop_toBottomOf="@id/department_mall_btn" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/traffic_car_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_traffic"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="교통∙자동차"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/culture_art_btn"
                    app:layout_constraintTop_toBottomOf="@id/onlineShopping_btn" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/present_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_present"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="선물"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/traffic_car_btn"
                    app:layout_constraintTop_toBottomOf="@id/food_btn" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/education_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_education"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="교육"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/culture_art_btn"
                    app:layout_constraintTop_toBottomOf="@id/culture_art_btn" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/convenienceStore_mart_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_market"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="편의점∙마트"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/education_btn"
                    app:layout_constraintTop_toBottomOf="@id/traffic_car_btn" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/beauty_salon_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_formeexpense"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="뷰티∙미용"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/convenienceStore_mart_btn"
                    app:layout_constraintTop_toBottomOf="@id/present_btn" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/residential_communication_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_living"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="주거∙통신"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/education_btn"
                    app:layout_constraintTop_toBottomOf="@id/education_btn" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/travel_accommodation_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_travel"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="여행∙숙박"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/residential_communication_btn"
                    app:layout_constraintTop_toBottomOf="@id/convenienceStore_mart_btn" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/familyEvent_fee_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_income"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="경조사∙회비"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/travel_accommodation_btn"
                    app:layout_constraintTop_toBottomOf="@id/beauty_salon_btn" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sport_leisure_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_selfimprovement"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="스포츠∙레저"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/residential_communication_btn"
                    app:layout_constraintTop_toBottomOf="@id/residential_communication_btn" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/alchol_nightlife_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_alchol"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="술∙유흥"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/sport_leisure_btn"
                    app:layout_constraintTop_toBottomOf="@id/travel_accommodation_btn" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/department_mall_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_necessaries"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="백화점∙몰"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/cafe_snack_btn"
                    app:layout_constraintTop_toBottomOf="@id/cafe_snack_btn" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/addCategoryBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/expenseCategory"
                app:layout_constraintBottom_toTopOf="@id/addCatetory"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/addCatetoryTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:background="@drawable/category_icon_style"
                    android:fontFamily="@font/spoqahansansneo_bold"
                    android:text="내가 추가한 카테고리"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/addCatetory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/addCategoryBar">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/hobbyGood_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="22dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_alchol"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="취미용품"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/incomeBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/addCatetory">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/incomeCategoryTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"

                    android:background="@drawable/category_icon_style"
                    android:fontFamily="@font/spoqahansansneo_bold"
                    android:text="수입"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/incomeCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/incomeBar"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="20dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/mainIncome_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="22dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_cafe"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="주수입"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/otherIncome_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_cafe"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="기타수입"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/mainIncome_btn"
                    app:layout_constraintStart_toEndOf="@id/mainIncome_btn"
                    app:layout_constraintTop_toTopOf="@id/mainIncome_btn" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/assetMovement_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/category_icon_style"
                    android:drawableStart="@drawable/ic_category_cafe"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="자산이동"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/otherIncome_btn"
                    app:layout_constraintStart_toEndOf="@id/otherIncome_btn"
                    app:layout_constraintTop_toTopOf="@id/otherIncome_btn" />


            </androidx.constraintlayout.widget.ConstraintLayout>


